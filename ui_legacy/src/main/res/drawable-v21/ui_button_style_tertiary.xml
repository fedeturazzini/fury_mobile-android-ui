<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- For API level >= 21 we're creating a ripple effect when the user taps the View -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/button_corners_radius" />
            <stroke
                android:width="1dp"
                android:color="@color/gray_ultra_light_3" />
        </shape>
    </item>
    <item>
        <ripple android:color="?android:colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="?android:colorAccent" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>