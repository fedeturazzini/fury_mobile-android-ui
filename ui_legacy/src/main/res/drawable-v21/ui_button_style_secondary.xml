<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corners_radius" />
            <solid android:color="@color/button_disabled" />
        </shape>
    </item>
    <item>
        <layer-list>
            <!-- For API level >= 21 we're creating a ripple effect when the user taps the View -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/button_corners_radius" />
                    <solid android:color="@color/button_secondary_normal" />
                </shape>
            </item>
            <item>
                <ripple android:color="?android:colorControlHighlight">
                    <item android:id="@android:id/mask">
                        <shape android:shape="rectangle">
                            <solid android:color="?android:colorAccent" />
                        </shape>
                    </item>
                </ripple>
            </item>
        </layer-list>
    </item>
</selector>
